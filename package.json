{
  "name": "dweb-search-frontend",
  "version": "0.1.0",
  "description": "Frontend for dweb-search, formerly ipfs-search.",
  "author": "Kees van Drongelen <kees@visualspace.nl>",
  "scripts": {
    "serve": "vite",
    "preview": "vite preview --open",
    "build": "vite build --out-dir dist",
    "lint": "eslint --ext .js,.mjs,.cjs,.jsx,.ts,.tsx,.vue src",
    "lint:fix": "eslint --ext .js,.mjs,.cjs,.jsx,.ts,.tsx,.vue src --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "test": "vitest watch",
    "test:once": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare-githooks": "husky install"
  },
  "dependencies": {
    "@mdi/font": "^6.5.95",
    "core-js": "^3.22.8",
    "dompurify": "^2.3.10",
    "howler": "^2.2.1",
    "ipfs-search-client": "^1.0.1",
    "masonry-layout": "^4.2.2",
    "mime": "^3.0.0",
    "moment": "^2.29.4",
    "nyats-client": "^0.2.0-alpha.2",
    "pretty-bytes": "^6.0.0",
    "regenerator-runtime": "^0.13.9",
    "ts-node": "^10.8.0",
    "url": "^0.11.0",
    "vue": "^3.2.13",
    "vue-closable": "0.0.3",
    "vue-masonry": "^0.11.8",
    "vue-router": "^4.0.15",
    "vue-timeago3": "^2.2.1",
    "vuetify": "3.0.0-beta.5",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@mdi/js": "^6.9.96",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.1.0",
    "@vue/test-utils": "^2.0.0",
    "c8": "^7.11.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-vue": "^9.1.0",
    "husky": "^8.0.1",
    "jest-extended": "^2.0.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "sass": "^1.53.0",
    "typescript": "^4.7.3",
    "url-join": "^5.0.0",
    "vite": "^3.0.2",
    "vite-plugin-vuetify": "^1.0.0-alpha.11",
    "vitest": "^0.13.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": "16.x"
  },
  "license": "AGPL-3.0",
  "repository": "github:ipfs-search/dweb-search-frontend",
  "type": "module",
  "lint-staged": {
    "*.{js,mjs,cjs,jsx,ts,tsx,vue}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
